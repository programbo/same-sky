{
  "name": "same-sky-workspace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --parallel --workspaces --if-present dev",
    "build": "bun run --workspaces --if-present build",
    "test": "bun run --workspaces --if-present test",
    "test:visual": "bun run --filter @same-sky/web test:visual",
    "test:visual:update": "bun run --filter @same-sky/web test:visual:update",
    "tui": "bun run --filter @same-sky/web tui"
  }
}
